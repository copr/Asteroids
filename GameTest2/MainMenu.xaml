<UserControl x:Class="GameTest2.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Visibility="{Binding Visibility}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="96"></RowDefinition>
            <RowDefinition Height="96"></RowDefinition>
            <RowDefinition Height="96"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button FontSize="18" Grid.Row="0" Name="StartButton" Content="{Binding StartButtonText}" HorizontalAlignment="Center" VerticalAlignment="Stretch" Click="StartButton_Click" Width="160"/>
        <Button FontSize="18" Grid.Row="1" Name="HighScoresButton" Content="High scores" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="160" Click="HighScoresButton_Click"/>
        <Button FontSize="18" Grid.Row="2" Name="StopButton" Content="{Binding EndButtonText}" HorizontalAlignment="Center" VerticalAlignment="Stretch" Click="StopButton_Click" Width="160"/>
    </Grid>
</UserControl>
